<div class="wrapper">
<%= render 'components/navbar' %>
<div class="container-flex-congrats">
  <div class="validation-infos">
    <div class="container">
      <div class="flex-container">
        <div class="text-container">
        <br>
        <br>
        <br>
          <h1>Your booking is validated!</h1>
          <div class="container-main-infos">
            <h6><i class="fa-regular fa-calendar"></i>From <%= @booking.check_in_date.day %>/<%= @booking.check_in_date.month %>/<%= @booking.check_in_date.year %> to <%= @booking.check_out_date.day %>/<%= @booking.check_out_date.month %>/<%= @booking.check_out_date.year %></h6>
            <h6><i class="fa-solid fa-person"></i> <%= @booking.nb_of_guests %> guests</h6>
            <h6><i class="fa-solid fa-dollar-sign"></i> <%= @booking.total_price %>$</h6>
            <div class="btn-pp">
              <%= link_to "Back home", "/", class: "btn btn-ghost" %>
            </div>
          </div>
        </div>
        <div class="image-container">
          <%= image_tag "congrats-booking.png", class: "logo-img" %>
        </div>
      </div>
    </div>
  </div>
</div>
  <%= render 'components/footer' %>
  </div>
