<div class="wrapper">
  <%= render 'components/navbar' %>
  <div class="container">
  <h4>Your Bookings</h4>

  <div class="cards-container">
   <h5>Upcoming bookings</h5>
    <% @upcoming_bookings.each do |booking| %>
      <%= link_to my_booking_path(booking) do %>
        <div class="card-trip">
          <div>
            <%= cl_image_tag booking.accommodation.photos[0].key, height: 300, width: 400, crop: :fill %>
          </div>
          <div class="card-trip-infos">
            <div>
              <h6> <i class="fa-regular fa-calendar"></i><%= booking.check_in_date.day %>/<%= booking.check_in_date.month %>/<%= booking.check_in_date.year %>-<%= booking.check_out_date.day %>/<%= booking.check_out_date.month %>/<%= booking.check_out_date.year %></h6>
              <% if booking.nb_of_guests == 1 %>
              <h6> <i class="fa-solid fa-person"></i> 1 guest </h6>
              <% else %>
              <h6> <i class="fa-solid fa-person"></i> <%= booking.nb_of_guests %> guests </h6>
              <% end %>
              <h6><i class="fa-solid fa-dollar-sign"></i> <%= booking.total_price %>$</h6>
              <%= link_to "Change", edit_my_booking_path(booking) %>
              <%= link_to "Cancel",
              my_booking_path(booking),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
            </div>
            <div class="price">
              <span><%= booking.total_price %></span><h2>$</h2>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>


  <div class="cards-container">
   <h5>Past bookings</h5>
    <% @past_bookings.each do |booking| %>
      <%= link_to my_booking_path(booking) do %>
        <div class="card-trip">
          <div>
            <%= cl_image_tag booking.accommodation.photos[0].key, height: 300, width: 400, crop: :fill %>
          </div>
          <div class="card-trip-infos">
            <div>
              <h6> <i class="fa-regular fa-calendar"></i><%= booking.check_in_date.day %>/<%= booking.check_in_date.month %>/<%= booking.check_in_date.year %>-<%= booking.check_out_date.day %>/<%= booking.check_out_date.month %>/<%= booking.check_out_date.year %></h6>
              <% if booking.nb_of_guests == 1 %>
              <h6> <i class="fa-solid fa-person"></i> 1 guest </h6>
              <% else %>
              <h6> <i class="fa-solid fa-person"></i> <%= booking.nb_of_guests %> guests </h6>
              <% end %>
              <h6><i class="fa-solid fa-dollar-sign"></i> <%= booking.total_price %>$</h6>
              <%= link_to "Leave a review"%>
            </div>
            <div class="price">
              <span><%= booking.total_price %></span><h2>$</h2>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>


  <%= render 'components/footer' %>
</div>
