<%= render 'components/navbar' %>
<%= render 'components/banner' %>

<div class="main-container">
  <%# title for listing cards %>
  <div class="title-container">
    <br>
    <h4>Handpicked houses</h4>
    <h6>Discover all the Home exchange and home standing offers</h6>
  </div>

  <%# card %>

  <div class="card-trip">
    <%= cl_image_tag "iv9myaiwtpksfavfs2fa", alt: "Card Image" %>
    <div class="card-trip-infos">
      <div>
        <h2>Prénom | Métier</h2>
        <p>Ville</p>
      </div>
      <div>
        <h2>Prix</h2>
      </div>
      <div class="card-trip-user">
        <%= cl_image_tag "qd2qjvq7dgjakj1qljbi", alt: "User Avatar", class: "avatar-bordered" %>
      </div>
    </div>
    <div class="btn-ghost">
      <%= link_to "See more", "/accommodations", class: "btn btn-ghost" %>
    </div>
  </div>
</div>

<%= render 'components/footer' %>
