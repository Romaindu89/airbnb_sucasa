<%= render 'components/navbar' %>
<%= render 'components/banner' %>

<div class="main-container">
  <%# title for listing cards %>
  <div class="title-container">
    <br>
    <h4>Handpicked houses</h4>
    <h6>Discover all the Home exchange and home standing offers</h6>
  </div>

  <%# card %>
  <div class="container">
    <div class="cards-container">
      <% @accommodations.each do |accommodation| %>
      <%= link_to accommodation do %>
        <div class="card-trip">
          <div>
            <%= cl_image_tag accommodation.photos[0].key, height: 300, width: 400, crop: :fill %>
          </div>
          <div class="card-trip-infos">
            <div>
              <h2><%= accommodation.title %></h2>
              <p><%= accommodation.address %></p>
            </div>
            <div class="price">
              <span><%= accommodation.price_per_night %></span><h2>$</h2>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
    <div class="btn-simple-frame">
    <%= link_to "See more", "/accommodations", class: "nav-link" %>
    </div>
  </div>

  <div class="banner-hp">
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1523365154888-8a758819b722?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1769&q=80);">
      <div class="container">
        <h1><strong>Uncover your summer escape</strong></h1>
        <p>Experience the perfect summer getaway and make unforgettable memories. ðŸŒž</p>
        <div class="btn-pp">
          <%= link_to "Discover", "/accommodations", class: "btn" %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'components/footer' %>
